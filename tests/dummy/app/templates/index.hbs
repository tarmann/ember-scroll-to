<nav class="sidebar">
  <h1 id="title">ember-scroll-to-context</h1>

  <p>Scroll to elements on the page withing a given context and highlight visible section on the menu.</p>

  {{dummy-menu}}
</nav>

<div class="main">
  {{#scroll-to-context context="page" on="window" as |pageContext|}}
    {{#pageContext.section name="welcome" class="section"}}
      <h2>Welcome</h2>
    {{/pageContext.section}}

    {{#pageContext.section name="installation" class="section"}}
      <h2>Installation</h2>
    {{/pageContext.section}}

    {{#pageContext.section name="usage" class="section"}}
      <h2>Usage</h2>
    {{/pageContext.section}}

    {{#pageContext.section name="options" class="section"}}
      <h2>Options</h2>

      <h3>scroll-to-nav</h3>

      <ul>
        <li>context</li>
        <li>animate</li>
      </ul>

      <h3>scroll-to</h3>

      <ul>
        <li>section</li>
        <li>animate</li>
      </ul>

      <h3>scroll-to-context</h3>

      <ul>
        <li>name</li>
        <li>on (local, window)</li>
        <li>direction</li>
      </ul>

      <h3>scroll-to-section</h3>

      <ul>
        <li>section</li>
      </ul>

    {{/pageContext.section}}

    {{#pageContext.section name="nested-sections" class="section"}}
      {{sample-contextual}}
    {{/pageContext.section}}

    {{#pageContext.section name="examples" class="section"}}
    {{/pageContext.section}}

  {{/scroll-to-context}}
</div>

